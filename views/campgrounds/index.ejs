<% include ../partials/header %>
<div class="container">
        <div class="container">
            <header class="jumbotron">
            <h1>Welcome to YelpCamp!!</h1>
            <p>View our hand-picked campgrounds all over the world</p>
            <p>
            <a class="btn btn-primary btn-lg" href="/campground/new">Add new campground</a>
            </p>
            </header>
        </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>Welcome to our most popular campground</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">  
                <div class="thumbnail">
                     <img src="<%= camp.image %>">
                    <div class="caption">
                        <h4><%= camp.name %></h4>
                    </div>
                    <p>
                        <a href="/campground/<%= camp._id %>" class="btn btn-primary">MoreInfo</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
